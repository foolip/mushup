<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.musicbrainz.hibernate">

	<class name="HibernateReleaseTrack" table="albumjoin">
		<comment>MusicBrainz Release-Track binding.</comment>

		<id name="row" column="id">
			<generator class="sequence">
				<param name="sequence">albumjoin_id_seq</param>
			</generator>
		</id>
		
		<many-to-one name="release" column="album" />
		<many-to-one name="track" column="track" />
		<property name="trackNumber" type="integer" column="sequence" />
	</class>

</hibernate-mapping>
